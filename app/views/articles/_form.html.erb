<%= form_with model: @article, local: true do |form| %>
  <%= form.label :title %><br>
  <%= form.text_field :title %>

  <%= form.label :tag_list %><br>
  <%= form.text_field :tag_list %>

  <%= form.label :text %><br>
  <%= form.text_area :text %>

  <%= form.submit class: 'bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-4 px-8 rounded' %>
<% end %>