<h1 class="h1-bg text-center mb-10">Dashboard</h1>

<section class="jumbotron text-center bg-white shadow">
  <p>You are now logged in.</p>
  <p>Welcome, <%= @user[:info][:name] %></p>
  <img class="thumbnail" src="<%= @user[:info][:image] %>"/>
</section>

<section class="jumbotron bg-white shadow">
  <div class="panel-heading">Normalized User Profile</div>
  <div class="panel-body">
    <pre class="shadow-inner"><%= JSON.pretty_generate(@user[:info]) %></pre>
  </div>
</section>

<section class="jumbotron bg-white shadow">
  <div class="panel-heading">Full User Profile</div>
  <div class="panel-body">
    <pre class="shadow-inner"><%= JSON.pretty_generate(@user[:extra][:raw_info]) %></pre>
  </div>
</section>
